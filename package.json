{
  "name": "@a73/get-all-files-ts",
  "version": "1.0.1",
  "author": {
    "name": "Rodrigo Erades",
    "email": "rerades@siete3.com",
    "url": "http://siete3.com"
  },
  "description": "A TypeScript blazing-fast recursive directory crawler with lazy sync and async iterator support, forked from  get-all-files by @TomerAberbach",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "generate:docs": "typedoc",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "NODE_OPTIONS='--no-warnings --loader ts-node/esm' nodemon --config nodemon.json src/index.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "lint:fix": "xo --fix",
    "build": "tsc --build && pnpm terser ./dist/index.js -c -m --source-map -o ./dist/index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=12.17.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/area73/get-all-files-ts.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "fs",
    "recursive",
    "readdir",
    "path",
    "directory",
    "files",
    "lazy",
    "async",
    "iterator",
    "iterable",
    "node",
    "ESM",
    "generator",
    "typescript",
    "file",
    "handlers",
    "readers"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/area73/get-all-files-ts/issues"
  },
  "homepage": "https://github.com/area73/get-all-files-ts#readme",
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@babel/preset-env": "7.16.8",
    "@babel/preset-typescript": "7.16.7",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "babel-jest": "27.4.6",
    "eslint": "7.32.0",
    "jest": "27.4.7",
    "nodemon": "2.0.15",
    "terser": "5.37.0",
    "ts-node": "10.4.0",
    "typedoc": "0.22.10",
    "typescript": "4.5.4",
    "xo": "0.47.0"
  },
  "xo": {
    "space": true,
    "rules": {
      "no-param-reassign": "error",
      "unicorn/no-array-reduce": "off",
      "@typescript-eslint/no-unused-expressions": [
        "error",
        {
          "allowShortCircuit": true
        }
      ],
      "@typescript-eslint/no-loop-func": "off",
      "import/extensions": "off",
      "unicorn/prefer-module": "off",
      "unicorn/no-array-callback-reference": "off",
      "capitalized-comments": "off"
    }
  },
  "jest": {
    "clearMocks": true,
    "coverageProvider": "v8",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
